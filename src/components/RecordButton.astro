---
// RecordButton Component - RGB Neon Style
const { isRecording = false } = Astro.props;
---

<button
  id="recordBtn"
  class="record-button group relative w-48 h-48 rounded-full flex items-center justify-center transition-all duration-300 ease-out"
  aria-label="Grabar audio"
>
  <!-- Animated ring -->
  <div class="absolute inset-0 rounded-full bg-gradient-to-br from-pink-500 via-purple-500 to-cyan-500 opacity-80 blur-xl group-hover:blur-2xl transition-all duration-300"></div>
  
  <!-- Button background -->
  <div class="relative w-44 h-44 rounded-full glass flex items-center justify-center border-2 border-white/20 group-hover:scale-105 transition-transform">
    <!-- Microphone icon -->
    <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
    </svg>
  </div>
  
  <!-- Status text -->
  <span class="absolute -bottom-12 text-sm font-semibold text-gray-400 group-hover:text-white transition-colors">
    Pulsa para grabar
  </span>
</button>

<style>
  .record-button.recording {
    animation: pulse-record 1.5s ease-in-out infinite;
  }
  
  .record-button.recording .relative {
    background: rgba(239, 68, 68, 0.2);
  }
  
  @keyframes pulse-record {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }
</style>
