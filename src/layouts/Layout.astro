                <path d="M868.789,451.915l-45.85,131.433l-106.979,6.112l3.058,-262.862l516.558,0l586.858,981.158l-146.717,6.112l-137.546,-241.467l-577.692,-6.112l-146.717,250.637l-155.883,3.058l476.825,-770.254" style="fill:none;stroke:#fff;stroke-width:52.08px;"/>
